<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/">

    <TextView
        android:layout_width="200dp"
        android:layout_height="34dp"
        android:text="The weather is:"
        android:textSize="30sp"
        android:textStyle="italic"
        android:textColor="@android:color/holo_green_dark"
        android:layout_margin="10dp"
        android:layout_gravity="left|top" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Check!"
        android:textSize="30sp"
        android:layout_marginTop="5dp"
        android:id="@+id/button_check"
        android:textColor="@android:color/holo_green_dark"
        android:layout_marginLeft="210dp"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        android:text="Today is..."
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_blue_bright"
        android:id="@+id/weather_type" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="140dp"
        android:textColor="@android:color/holo_blue_bright"
        android:text="Small"
        android:textSize="25sp"
        android:id="@+id/txt_view_date" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="220dp"
        android:text="Small"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="25sp"
        android:id="@+id/txt_view_wind"
         />

    <TextView
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="10dp"
        android:text="Temperature: from"
        android:textSize="20sp"
        />

    <EditText
        android:layout_width="36dp"
        android:layout_height="30dp"
        android:inputType="number"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="185dp"
        android:id="@+id/edittxt_temperature_from" />

    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="220dp"
        android:text="to:"
        android:textSize="20sp" />

    <EditText
        android:layout_width="36dp"
        android:layout_height="30dp"
        android:inputType="number"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="250dp"
        android:id="@+id/edittxt_temperature_to" />

    <TextView
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="10dp"
        android:text="wind is:"
        android:textSize="20sp" />

    <EditText
        android:layout_width="36dp"
        android:layout_height="30dp"
        android:inputType="number"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="85dp"
        android:id="@+id/edittxt_wind_speed" />



</FrameLayout>